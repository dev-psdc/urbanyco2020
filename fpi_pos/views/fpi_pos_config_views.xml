<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_neonety_pos_config_form" model="ir.ui.view" >
        <field name="name">neonety.pos.config.form.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='order_reference']" position="inside">
                <div class="o_setting_right_pane">
                    <label string="Usar el módulo FPI para imprimir las ordenes de pedidos"/>
                    <div class="text-muted">
                        Haga clic en esta opción si desea que sus ordenes de pedido salgan directamente a la impresora fiscal.
                    </div>
                    <div class="content-group mt16">
                        <field name='iface_fiscal_printer_button' />
                    </div>
                    <br />
                    <label string="Preguntar si desea imprimir en la impresora fiscal"/>
                    <div class="text-muted">
                        Si habilita esta opcion, se le preguntará al usuario antes de validar la orden en el POS.
                    </div>
                    <div class="content-group mt16">
                        <field name='iface_fiscal_printer_optional' />
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>